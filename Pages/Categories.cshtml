@page "~/Categorias/{skip?}/{take?}"
@model Categories

<!-- BODY -->
<h1>Categorias</h1>
<div>
    <table>
        <thead>
        <tr>
            <td class="topo">ID: </td>
            <td class="topo">Title: </td>
            <td class="topo">Price: </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.CategoryList)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Title</td>
                <td>@category.Price.ToString(format: "C", new CultureInfo("pt-Br"))</td>
            </tr>
        }
        </tbody>
    </table>
</div>
